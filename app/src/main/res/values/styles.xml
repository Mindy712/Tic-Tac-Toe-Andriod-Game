<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialCardWithBorder" parent="Widget.MaterialComponents.CardView">
        <item name="strokeWidth">@dimen/slim_margin</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cardBackgroundColor">@color/backgroundDefaultColor</item>
    </style>

    <style name="BorderlessButtonTicTacToe" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="android:textColor">@color/button_color_selector</item>
        <item name="android:onClick">pick123</item>
    </style>

    <style name="TextViewStatistics">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">
            @style/TextAppearance.MaterialComponents.Subtitle1</item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor">
        <item name="android:textColor">@color/primaryTextColoredColor</item>
    </style>

    <style name="TextViewStatistics.PrimaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor">
        <item name="android:textColor">@color/secondaryTextColoredColor</item>
    </style>

    <style name="TextViewStatistics.SecondaryTextColor.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="board_button_style_portrait">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/default_activity_margin</item>
        <item name="android:textSize">60sp</item>
        <item name="android:onClick">takeTurn</item>
    </style>

    <style name="board_button_style_land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/slim_margin</item>
        <item name="android:textSize">30sp</item>
        <item name="android:onClick">takeTurn</item>
    </style>

    <style name="board_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>